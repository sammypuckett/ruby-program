
<h1>Facts</h1>
 
<table>
  <tr>
    <th>Author</th>
    <th>Fact</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>

<td><%= link_to 'Post New Fact', new_article_path %></td>

